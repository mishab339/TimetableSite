<script>
    // JavaScript to clear error messages on input or change
    document.addEventListener("DOMContentLoaded", function () {
      const fields = document.querySelectorAll('input, select'); // Include inputs and select elements

      fields.forEach(field => {
        const eventType = field.tagName === 'SELECT' ? 'change' : 'input'; // Use 'change' for select and 'input' for inputs

        field.addEventListener(eventType, function () {
          const errorDiv = this.nextElementSibling; // Assumes error message is the next sibling
          if (errorDiv && errorDiv.classList.contains('error')) {
            errorDiv.textContent = ''; // Clear error message
          }
        });
      });
      let hasErrors = false;

            fields.forEach(field => {
                const errorDiv = field.parentElement.querySelector('.error'); // Find the associated error div

                // If the field has an error, clear its content
                if (errorDiv && errorDiv.textContent.trim()) {
                    field.value = '';  // Clear the content of the invalid field
                    hasErrors = true;  // Mark that there are errors
                }
            });

            // If there are errors, prevent form submission
            if (hasErrors) {
                event.preventDefault();  // Prevent the form from being submitted
            }
    });
  </script>
